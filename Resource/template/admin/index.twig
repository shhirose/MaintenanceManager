{% extends 'default_frame.twig' %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% set menus = ['setting', 'system', 'admin_maintenance_manager'] %}

{% block title %}システム設定{% endblock %}
{% block sub_title %}メンテナンス管理{% endblock %}

{% block main %}
<form id="form1" role="form" action="" method="post">
    {{ form_widget(form._token) }}
    <div id="aside_wrap" class="row">
        <div class="col-md-9">
            <div class="box form-horizontal">
                <div class="box-header">
                    <h3 class="box-title">設定情報</h3>
                </div>

                <div class="box-body">
                    {{ form_row(form.status) }}

                    <div class="form-group">
                        {{ form_label(form.content) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.content, { attr : { 'rows' : 15, style : 'font-size:12px' } }) }}
                            {{ form_errors(form.content) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="col_inner" id="aside_column">
                <div class="box no-header">
                    <div class="box-body">
                        <div class="row text-center">
                            <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                <button type="submit" class="btn btn-primary btn-block btn-lg prevention-btn">更新</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}